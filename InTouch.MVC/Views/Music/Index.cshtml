@model InTouch.MVC.ViewModels.MusicIndexViewModel
@{
    ViewData["Title"] = "Music";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-3">Music</h1>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a asp-controller="Music" asp-action="Upload" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Upload Music
                    </a>
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-sort-down"></i>
                        @switch (Model.SortBy)
                        {
                            case "genre":
                                <span>By Genre</span>
                                break;
                            case "user":
                                <span>By Artist</span>
                                break;
                            default:
                                <span>Most Recent</span>
                                break;
                        }
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                        <li>
                            <a class="dropdown-item @(Model.SortBy == "date" ? "active" : "")"
                               asp-action="Index" asp-route-sortBy="date">Most Recent</a>
                        </li>
                        <li>
                            <a class="dropdown-item @(Model.SortBy == "genre" ? "active" : "")"
                               asp-action="Index" asp-route-sortBy="genre">By Genre</a>
                        </li>
                        <li>
                            <a class="dropdown-item @(Model.SortBy == "user" ? "active" : "")"
                               asp-action="Index" asp-route-sortBy="user">By Artist</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Music != null && Model.Music.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var track in Model.Music)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="row g-0">
                            <div class="col-4">
                                <img src="@(string.IsNullOrEmpty(track.CoverUrl) ? "/images/default-music-cover.jpg" : track.CoverUrl)"
                                     class="img-fluid rounded-start" alt="@track.Title" style="height: 100%; object-fit: cover;">
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title mb-1">
                                        <a asp-action="Details" asp-route-id="@track.Id" class="text-decoration-none">
                                            @track.Title
                                        </a>
                                    </h5>
                                    <p class="card-text mb-2">
                                        <a asp-controller="Account" asp-action="ViewProfile" asp-route-id="@track.UserId" class="text-decoration-none">
                                            @(track.User != null ? $"{track.User.FirstName} {track.User.LastName}" : "Unknown Artist")
                                        </a>
                                    </p>
                                    @if (!string.IsNullOrEmpty(track.Genre))
                                    {
                                        <p class="card-text mb-2">
                                            <span class="badge bg-secondary">@track.Genre</span>
                                        </p>
                                    }
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i> @track.UploadDate.ToString("MMM d, yyyy")
                                        </small>
                                    </p>

                                    <audio controls class="w-100 mt-2">
                                        <source src="@track.MusicUrl" type="audio/mpeg">
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i> No music available.
            <a asp-controller="Music" asp-action="Upload" class="alert-link">Upload</a> your first track!
        </div>
    }
</div>