@model InTouch.MVC.ViewModels.UserMusicViewModel
@{
    ViewData["Title"] = $"{Model.User.FirstName}'s Music";
    var isCurrentUser = User.Identity!.IsAuthenticated && Model.User.UserName == User.Identity.Name;
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-3">
                @if (isCurrentUser)
                {
                    <span>My Music</span>
                }
                else
                {
                    <span>@Model.User.FirstName's Music</span>
                }
            </h1>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <a asp-controller="Account" asp-action="ViewProfile" asp-route-id="@Model.User.Id" class="btn btn-outline-primary">
                        <i class="bi bi-person"></i> View Profile
                    </a>

                    @if (isCurrentUser)
                    {
                        <a asp-action="Upload" class="btn btn-primary ms-2">
                            <i class="bi bi-upload"></i> Upload Music
                        </a>
                    }
                </div>

                <span class="badge bg-primary rounded-pill">@Model.Music.Count tracks</span>
            </div>
        </div>
    </div>

    @if (Model.Music.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var track in Model.Music)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="row g-0">
                            <div class="col-4">
                                <img src="@(string.IsNullOrEmpty(track.CoverUrl) ? "/images/default-music-cover.jpg" : track.CoverUrl)"
                                     class="img-fluid rounded-start" alt="@track.Title" style="height: 100%; object-fit: cover;">
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title mb-1">
                                        <a asp-action="Details" asp-route-id="@track.Id" class="text-decoration-none">
                                            @track.Title
                                        </a>
                                    </h5>

                                    @if (!string.IsNullOrEmpty(track.Genre))
                                    {
                                        <p class="card-text mb-2">
                                            <span class="badge bg-secondary">@track.Genre</span>
                                        </p>
                                    }

                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i> @track.UploadDate.ToString("MMM d, yyyy")
                                        </small>
                                    </p>

                                    <audio controls class="w-100 mt-2">
                                        <source src="@track.MusicUrl" type="audio/mpeg">
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            @if (isCurrentUser)
            {
                <span>You haven't uploaded any music yet. <a asp-action="Upload" class="alert-link">Upload your first track!</a></span>
            }
            else
            {
                <span>@Model.User.FirstName hasn't uploaded any music yet.</span>
            }
        </div>
    }
</div>