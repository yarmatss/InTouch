@model InTouch.MVC.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-white">
                <h2 class="mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Bio" class="form-label"></label>
                        <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Tell others about yourself"></textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ProfilePicture" class="form-label"></label>

                        <div class="mb-3 d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(Model.CurrentProfilePicture))
                            {
                                <img src="@Model.CurrentProfilePicture" class="rounded-circle me-3" alt="Current Profile"
                                     style="width: 80px; height: 80px; object-fit: cover;" />
                                <div>Current profile picture</div>
                            }
                            else
                            {
                                <img src="/images/default-profile.jpg" class="rounded-circle me-3" alt="Default Profile"
                                     style="width: 80px; height: 80px; object-fit: cover;" />
                                <div>Using default profile picture</div>
                            }
                        </div>

                        <input asp-for="ProfilePicture" class="form-control" type="file" accept="image/*" />
                        <div class="form-text">Upload a new profile picture (optional)</div>
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Profile" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}