@model IEnumerable<InTouch.MVC.Models.Post>

@{
    ViewData["Title"] = "Posts";
}

<div class="container">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Posts</h1>
                <a asp-controller="Posts" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Create New Post
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            @if (Model != null && Model.Any())
            {
                foreach (var post in Model)
                {
                    <partial name="_PostItem" model="post" />
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i> No posts found. Create your first post!
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/post-interactions.js"></script>
}